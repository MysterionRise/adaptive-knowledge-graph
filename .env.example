# Application Settings
APP_NAME="Adaptive Knowledge Graph"
DEBUG=false
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=Admin@123
OPENSEARCH_INITIAL_ADMIN_PASSWORD=Admin@123
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=false

# LLM Configuration
LLM_MODE=local  # local, remote, or hybrid
LLM_LOCAL_BACKEND=ollama  # ollama or llamacpp
LLM_OLLAMA_HOST=http://localhost:11434
LLM_LOCAL_MODEL=llama3.1:8b-instruct-q4_K_M
LLM_MAX_CONTEXT=8192
LLM_TEMPERATURE=0.1

# OpenRouter (for remote/hybrid mode)
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=mistralai/mixtral-8x7b-instruct
OPENROUTER_VERIFY_SSL=false  # Set to false in Docker/development to avoid SSL certificate issues

# Embeddings & Reranking
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cuda  # cuda or cpu
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_DEVICE=cuda

# RAG Settings
RAG_KG_EXPANSION=true
RAG_RETRIEVAL_TOP_K=20
RAG_FINAL_TOP_K=5

# Privacy & Compliance
PRIVACY_LOCAL_ONLY=true  # Set to true to disable all remote API calls
PRIVACY_NO_TRACKING=false

# Student Model
STUDENT_BKT_ENABLED=true
STUDENT_IRT_ENABLED=true
